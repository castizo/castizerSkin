<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.castizer"
  version="1.1.1"
  name="castizer"
  provider-name="Castizo, Team Kodi">
  <requires>
    <import addon="xbmc.gui" version="5.3.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Castizer skin by Castizo.</summary>
    <description lang="en">Castizer is the most awesome skin that turns Kodi into your ideal companion in the living room. A whole new musical experience.</description>
    <disclaimer lang="en">Installing Castizer may cause awesomeness.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
